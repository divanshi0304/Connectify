<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:contentPadding="3dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagepr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_default_user"/>

        <TextView
            android:id="@+id/namepr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagepr"
            android:text="Divanshi"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/commentpr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namepr"
            android:layout_toEndOf="@id/imagepr"
            android:layout_toRightOf="@id/imagepr"
            android:text="This is a comment"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/timepr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imagepr"
            android:layout_toRightOf="@+id/imagepr"
            android:layout_below="@id/commentpr"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>